---
const currentPath = Astro.url.pathname;
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16">
      <div class="flex-shrink-0">
        <a href="/" class="text-2xl font-bold" style="color: var(--color-primary)">
          Immersion English
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:flex md:space-x-8">
        <a
          href="/"
          class={`inline-flex items-center px-1 pt-1 text-sm font-medium border-b-2 ${
            currentPath === '/'
              ? 'border-[var(--color-primary)] text-gray-900'
              : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'
          }`}
        >
          Home
        </a>
        <a
          href="/about"
          class={`inline-flex items-center px-1 pt-1 text-sm font-medium border-b-2 ${
            currentPath === '/about'
              ? 'border-[var(--color-primary)] text-gray-900'
              : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'
          }`}
        >
          About
        </a>
        <a
          href="/lessons"
          class={`inline-flex items-center px-1 pt-1 text-sm font-medium border-b-2 ${
            currentPath === '/lessons'
              ? 'border-[var(--color-primary)] text-gray-900'
              : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'
          }`}
        >
          Lessons
        </a>
        <a
          href="/dublin-summer-2027"
          class={`inline-flex items-center px-1 pt-1 text-sm font-medium border-b-2 ${
            currentPath === '/dublin-summer-2027'
              ? 'border-[var(--color-primary)] text-gray-900'
              : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'
          }`}
        >
          Dublin Summer 2027
        </a>
        <a
          href="/contact"
          class={`inline-flex items-center px-1 pt-1 text-sm font-medium border-b-2 ${
            currentPath === '/contact'
              ? 'border-[var(--color-primary)] text-gray-900'
              : 'border-transparent text-gray-500 hover:border-gray-300 hover:text-gray-700'
          }`}
        >
          Contact Us
        </a>
      </div>

      <!-- Mobile menu button -->
      <div class="flex md:hidden">
        <button
          type="button"
          id="mobile-menu-button"
          class="inline-flex items-center justify-center p-2 rounded-md text-gray-400 hover:text-gray-500 hover:bg-gray-100"
          aria-expanded="false"
        >
          <span class="sr-only">Open main menu</span>
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div id="mobile-menu" class="hidden md:hidden pb-3 pt-2">
      <a
        href="/"
        class={`block pl-3 pr-4 py-2 border-l-4 text-base font-medium ${
          currentPath === '/'
            ? 'border-[var(--color-primary)] bg-green-50 text-[var(--color-primary)]'
            : 'border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700'
        }`}
      >
        Home
      </a>
      <a
        href="/about"
        class={`block pl-3 pr-4 py-2 border-l-4 text-base font-medium ${
          currentPath === '/about'
            ? 'border-[var(--color-primary)] bg-green-50 text-[var(--color-primary)]'
            : 'border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700'
        }`}
      >
        About
      </a>
      <a
        href="/lessons"
        class={`block pl-3 pr-4 py-2 border-l-4 text-base font-medium ${
          currentPath === '/lessons'
            ? 'border-[var(--color-primary)] bg-green-50 text-[var(--color-primary)]'
            : 'border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700'
        }`}
      >
        Lessons
      </a>
      <a
        href="/dublin-summer-2027"
        class={`block pl-3 pr-4 py-2 border-l-4 text-base font-medium ${
          currentPath === '/dublin-summer-2027'
            ? 'border-[var(--color-primary)] bg-green-50 text-[var(--color-primary)]'
            : 'border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700'
        }`}
      >
        Dublin Summer 2027
      </a>
      <a
        href="/contact"
        class={`block pl-3 pr-4 py-2 border-l-4 text-base font-medium ${
          currentPath === '/contact'
            ? 'border-[var(--color-primary)] bg-green-50 text-[var(--color-primary)]'
            : 'border-transparent text-gray-500 hover:bg-gray-50 hover:border-gray-300 hover:text-gray-700'
        }`}
      >
        Contact Us
      </a>
    </div>
  </nav>
</header>

<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');

  button?.addEventListener('click', () => {
    const expanded = button.getAttribute('aria-expanded') === 'true';
    button.setAttribute('aria-expanded', (!expanded).toString());
    menu?.classList.toggle('hidden');
  });
</script>
