---
interface Props {
  class?: string;
}

const { class: className } = Astro.props;
---

<a href="/" class={`flex items-center gap-3 ${className || ''}`}>
  <!-- Logo Icon -->
  <svg width="40" height="40" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
    <!-- Background Circle -->
    <circle cx="20" cy="20" r="20" fill="var(--color-primary)" opacity="0.1"/>

    <!-- Main Speech Bubble -->
    <path
      d="M12 12C12 10.8954 12.8954 10 14 10H26C27.1046 10 28 10.8954 28 12V20C28 21.1046 27.1046 22 26 22H21L17 26V22H14C12.8954 22 12 21.1046 12 20V12Z"
      fill="var(--color-primary)"
    />

    <!-- Letter E inside speech bubble -->
    <path
      d="M17 14H23V16H19V17.5H22.5V19H19V20.5H23V22H17V14Z"
      fill="white"
    />

    <!-- Secondary accent bubble -->
    <circle cx="30" cy="28" r="4" fill="var(--color-secondary)"/>
    <circle cx="30" cy="28" r="1.5" fill="white"/>
  </svg>

  <!-- Logo Text -->
  <div class="flex flex-col">
    <span class="text-xl font-bold leading-tight" style="color: var(--color-primary)">
      Immersion English
    </span>
    <span class="text-xs text-gray-500 font-medium tracking-wide">
      English for Life
    </span>
  </div>
</a>
